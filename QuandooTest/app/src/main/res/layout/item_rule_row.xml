<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textViewRuleRowItem"
        android:layout_marginLeft="@dimen/rule_editor_outer_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:text=""
        android:layout_weight="1.0"/>

    <RadioGroup
        android:id="@+id/radioGroupRuleRowItem"
        android:layout_height="@dimen/rule_editor_radiobtn_height"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/rule_editor_radiobtn_margin"
        android:gravity="right"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioBtn1RileRow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rule_editor_radiobtn_height"
            android:layout_marginRight="@dimen/rule_editor_radiobtn_margin"
            android:checked="true"
            android:text="@string/empty" />

        <RadioButton
            android:id="@+id/radioBtn2RileRow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rule_editor_radiobtn_height"
            android:layout_marginRight="@dimen/rule_editor_radiobtn_margin"
            android:text="@string/empty" />

        <RadioButton
            android:id="@+id/radioBtn3RileRow"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/rule_editor_radiobtn_height"
            android:text="@string/empty" />
    </RadioGroup>
</LinearLayout>